import SwiftUI

struct LoginView: View {
    var body: some View {
        NavigationView {
            VStack {
                Spacer()
                
                // App Logo
                Image("appLogo") // Replace with your actual logo image name
                    .resizable()
                    .aspectRatio(contentMode: .fit)
                    .frame(width: 150, height: 150)
                    .padding()
                
                // App Slogan
                Text("Your Garden, Our Passion")
                    .font(.system(size: 24, weight: .bold, design: .serif))
                    .foregroundColor(Color.brown)
                    .multilineTextAlignment(.center)
                    .padding(.horizontal)
                
                Spacer()
                
                // Get Started Button
                NavigationLink(destination: PlantListView()) {
                    Text("Get Started")
                        .font(.system(size: 20, weight: .semibold))
                        .foregroundColor(.white)
                        .padding()
                        .frame(maxWidth: .infinity)
                        .background(Color.brown)
                        .cornerRadius(10)
                        .padding(.horizontal, 40)
                }
                .padding(.bottom, 40)
                
                Spacer()
            }
            .background(Color("LightBrown").edgesIgnoringSafeArea(.all))
            .navigationBarHidden(true)
        }
    }
}

@main
struct AgroLyzeApp: App {
    var body: some Scene {
        WindowGroup {
            LoginView() // Start with the login view
        }
    }
}
