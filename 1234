import SwiftUI

struct HomeView: View {
    var body: some View {
        NavigationView {
            VStack {
                Spacer()
                
                // App Logo
                Image("appLogo") // Replace with your actual logo image name
                    .resizable()
                    .aspectRatio(contentMode: .fit)
                    .frame(width: 150, height: 150)
                    .padding()
                
                // Welcome Message or Slogan
                Text("Welcome to AgroLyze")
                    .font(.system(size: 28, weight: .bold, design: .serif))
                    .foregroundColor(Color.brown)
                    .multilineTextAlignment(.center)
                    .padding(.horizontal)
                
                Text("Your Garden, Our Passion")
                    .font(.system(size: 20, weight: .medium, design: .serif))
                    .foregroundColor(.secondary)
                    .multilineTextAlignment(.center)
                    .padding(.horizontal)
                
                Spacer()
                
                // Navigation or Action Buttons
                VStack(spacing: 20) {
                    Button(action: {
                        // Placeholder for navigation or action
                        print("Explore Plants tapped")
                    }) {
                        Text("Explore Plants")
                            .font(.system(size: 20, weight: .semibold))
                            .foregroundColor(.white)
                            .padding()
                            .frame(maxWidth: .infinity)
                            .background(Color.brown)
                            .cornerRadius(10)
                            .padding(.horizontal, 40)
                    }
                    
                    Button(action: {
                        // Placeholder for navigation or action
                        print("My Garden tapped")
                    }) {
                        Text("My Garden")
                            .font(.system(size: 20, weight: .semibold))
                            .foregroundColor(.white)
                            .padding()
                            .frame(maxWidth: .infinity)
                            .background(Color.green)
                            .cornerRadius(10)
                            .padding(.horizontal, 40)
                    }
                }
                .padding(.bottom, 40)
                
                Spacer()
            }
            .background(Color("LightBrown").edgesIgnoringSafeArea(.all))
            .navigationBarHidden(true)
        }
    }
}

@main
struct AgroLyzeApp: App {
    var body: some Scene {
        WindowGroup {
            HomeView()
        }
    }
}


